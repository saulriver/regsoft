  <%= simple_form_for(@area) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
        
       <form class="form-inline">
          <label class="form-group col-md-4">
          <%= f.input :name, class: "form-control mb-2 mr-sm-2" %>
          </label>

          <label class="form-group col-md-4">
            <%= f.label :state%>
            <%= f.select :state, options_for_select([['Activo', true], ['Inactivo', false]]) %>
          </label>

        <label class="form-group col-sm-4">
          <%= f.submit "Guardar", class: "btn btn-info btn-md" %>
        </label>
        
      <% end %>

       </form>
