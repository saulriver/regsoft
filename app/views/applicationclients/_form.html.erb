 <div class="modal-header">
      <h4 class="modal-title"><kbd>Registrar</kbd></h4>
    </div>
  <%= simple_form_for(@applicationclient) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
        
  <form class="form">
    <div class="left">
      <figcaption class="figure-caption">
       <%= f.association :application %>
         </figcaption>
         </div>

    <div class="right">
      <figcaption class="figure-caption">
        <%= f.association :client %>
        </figcaption>
        </div>
       
    <div class="left">
      <figcaption class="figure-caption">
        <%= f.label :servicelevel %>
        <%= f.number_field :servicelevel, :value => 5, min: 5, max: 80, step: 1 %>
      </figcaption>
        </div>

    <div class="right">
      <figcaption class="figure-caption">
         <%= f.label :state %>
            <%= f.select :state, options_for_select([['Activo', true], ['Inactivo', false]]) %>
          </figcaption>
          </div>

    <div class="center">
      <%= f.submit "Guardar"%>
      </div>

</form>
  <% end %>
