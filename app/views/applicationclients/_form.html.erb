<br/><br/><br/>
<div class="modal-content tabcontent">
  <div class="dialog">
  <%= simple_form_for(@applicationclient) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    
        <div class="body">
        
          <div class="form-group">
          <%= f.association :application, class: "form-control input-lg" %>
          </div>

          <div class="form-group">
          <%= f.association :client, class: "form-control input-lg" %>
          </div>

          <div class="form-group">
          <%= f.label :servicelevel %>
          <%= f.input :servicelevel, class: "form-control input-lg" %>
          </div>
          

          <div class="form-group col-md-4">
            <%= f.label :state%>
            <%= f.select :state, options_for_select([['Activo', true], ['Inactivo', false]]) %>
          </div>

        </div>

        <div class="footer">
          <%= f.submit "Guardar", class: "btn btn-primary btn-lg btn-block" %>
          <br/>
          <%= link_to 'Regresar', applicationclients_path, class: "btn btn-info btn-lg btn-block" %>
        </div>
        
      <% end %>

    </div>
  </div>