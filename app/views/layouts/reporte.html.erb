    <meta charset="utf-8" />
    <%= wicked_pdf_stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= wicked_pdf_javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

<h3 style="color: #6c757d;"><kbd>Listado reportes</kbd></h3>
<div class="modal-content text-center">
<div class="table-responsive">
<table class="table">
<thead>
  <div class="row">
    <tr class="success btn-info active justify-content-center">
    <th colspan="3"><h5><b style="color: orange">Gestionar</b></h5></th>
      <th><h6>Criticidad</h6></th>
      <th><h6>Cliente</h6></th>
