      <th><h6>N째 incidencia</h6></th>
      <th><h6>Descripci처n</h6></th>
      <th><h6>Archivos</h6></th>
      <th><h6>Estado/Reporte</h6></th>
    </tr>
  </div>
</thead>

  <% @incidentmanagements.each do |incidentmanagement| %>

  <tbody>
    <div class="row">
      <tr class="text-center">
        <td><%= incidentmanagement.incident.criticality.name %></td>
        <td><%= incidentmanagement.incident.userapplication.applicationclient.client.name %></td>
        <td><%= incidentmanagement.user.name %></td>
        <td><%= incidentmanagement.incident.userapplication.applicationclient.application.name %></td>
        <td><%= incidentmanagement.incident.userapplication.applicationclient.servicelevel %></td>
        <td><%= incidentmanagement.incident.created_at %></td>
        <td><%= incidentmanagement.updated_at %></td>
        <td><kbd><%= incidentmanagement.incident.id %></kbd></td>
        <td><%= incidentmanagement.incident.description %></td>
        <td><%= incidentmanagement.picture.extension_whitelist%></td>
        <td>
          <% if incidentmanagement.incident.state %>
             <img src="/img/estado_activo_24.png" alt="Activo" />
          <% else %>           
             <img src="/img/estado_falso_24.png" alt="Inactivo" />
          <% end %>
        </td>
        <!--<td>
           <%comment= link_to incidentmanagement, method: :delete, data: { confirm: 'Desea eliminar?', remote: true, class:"modal-content" } do %>
                <%= image_tag "/img/eliminar_24.png", :title=>"Eliminar" %>
           <% end %>
        </td>-->
       </tr>
       
      </div>
      </tbody>
    <% end %>
</table>
</div>
</div>

<div id="spacing">
<%= paginate(@incidentmanagements) %>
</div>
</body>
